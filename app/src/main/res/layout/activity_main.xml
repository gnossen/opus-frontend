<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/launch_next_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_thread_view"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onLaunchButtonClick"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/launch_next_activity_button"
        android:layout_alignParentStart="true"
        android:id="@+id/launch_beacon_submission_view"
        android:onClick="onBeaconSubmissionView"
        android:text="Beacon Submission View"/>


</RelativeLayout>
